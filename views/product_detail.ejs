    <style>
        /*------------------------------code Cuongkq-----------------*/
        /************product**************************/
        .product{
            padding:100px 0;
            display:flex
        }
        .product-top{
            padding-bottom: 40px;
        }
        .product-top p{
            font-family: "Times New Roman";
            font-size: 13px;
            margin: 0 12px;
            float: left;
            display: inline;
        }
        /**Left Images**/
        .product-content-left{
            width: 50%;
        }
        .product-content-left-big-img{
            display:block;
            max-width:80%;
            height: 500px;
            padding-right: 10px;
            overflow: hidden;
            margin-left: 10px;
        }
        .product-content-left-big-img img{
            width: 380px;
            height: 380px;
            border: 1px solid #dddddd;
            transition: all 0.6s ease-in-out;
        }
        .product-content-left-big-img:hover img{
            transform: scale(1.3);
            opacity: 0.8;
        }
        .product-content-left-small-img{
            width: 20%;
            height: 50px;

        }
        .product-content-left-small-img img{
            width: 100%;
            margin-bottom: 5px;
            border: 1px solid #dddddd;
        }
        /***Right-infor**/
        .product-content-right{
            width: 50%;
            float:right;
        }
        /***Name***/
        .product-content-right-product-name h3{
            font-family: Arial;
            font-size: 30px;
        }
        .product-content-right-product-name p{
            font-size: 18px
        }
        /***Price***/
        .product-content-right-product-price{
            margin:12px 0;
            font-size: 18px;
            font-family: "Arial";
        }
        /***Size***/
        .product-content-right-product-size{
            display:flex;
        }
        .product-content-right-product-size p{
            margin-right:12px;
        }
        /***Quantity***/
        .quantity{
            display:flex;
        }
        .quantity p{
            font-size: 18px;
            margin-bottom: 20px
        }
        .quantity input{
            display:flex;
            width: 80px;
            height:30px;
            padding-left: 5px;
            margin: 0 0 12px 12px;
            transition: all 0.3s ease;
        }
        /*****button*****/
        .product-content-right-product-button button {
            width: 250px;
            height: 40px;
            margin: 0 12px 0 0;
            transition: all 0.3s ease;
        }
        /***Icon***/
        .product-content-right-product-icon{
            display: flex;
            margin-top:20px ;
        }
        .product-content-right-product-icon-item {
            display: flex;
            margin-right: 20px;
            justify-content:center;
            align-items: center;
        }
        .product-content-right-product-icon-item i{
            font-size: 18px;
            margin-right: 5px;
            margin-bottom: 10px
        }
        /***bottom***/
        .product-content-right-bottom-title{
            display: flex;
        }
        .product-content-right-bottom-icon{
            padding-right: 20px;
        }
        .product-content-right-bottom-text{
            font-size: 20px;
        }

        /***introduce****/
        .introduce{
            padding-top:10px;
            padding-bottom: 50px;
        }
        .introduce-header p{
            font-size: 30px;
            font-family: Arial;
            text-align: center;
            padding-bottom:30px;
        }
        .introduce-body{
            width:1300px;
            display: flex;
        }
        .introduce-left{
            width:60%;
            padding:0 20px 100px 0;
        }
        #flush-headingOne{
