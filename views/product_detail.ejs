        .ins-bottom .card{
            height: 520px;
            border-radius: 20px;
            background-color: #dddddd;
        }
        .ins-card-title{
            float: left;
        }
        .instruction .ins-bottom .card .card-body .card-title b{
            padding-top: 15px;
            font-size: 25px;
            font-weight: 600;
            float:left;
            letter-spacing: 2px;
        }
        .instruction .ins-bottom .card .card-body .card-text{
            padding-top:20px;
            font-size: 13px;
            float: left;
            text-align: left;
        }
        .instruction .ins-bottom .card .card-note{
