            height:400px;
            overflow-x:hidden;
            overflow-y:auto;
        }
        .card{
            width:440px;
            border: 5px solid #dddddd;
        }
        .card-body{
            text-align: center;
            font-size: 25px;
            font-family: Arial;
            padding-top:15px
        }
        /******Instruction******/
        .instruction{
            width:100%;
            height: 1130px;
            background-color: #dddddd;
        }
        .ins-header p{
            text-align: center;
            font-size: 40px;
            font-family: Arial;
            padding-top: 50px;
            padding-bottom:20px
        }
        .ins-body{
            width:1200px;
            height:330px;
            border: 0.5px solid #000000;
            margin: auto;
            display: flex;
        }
        .ins-body-left{
